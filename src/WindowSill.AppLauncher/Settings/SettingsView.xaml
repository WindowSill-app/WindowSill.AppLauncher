<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WindowSill.AppLauncher.Settings.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:api="using:WindowSill.API"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:core="using:WindowSill.AppLauncher.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WindowSill.AppLauncher.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Left"
            DefaultLabelPosition="Right"
            IsOpen="False">
            <AppBarButton
                api:Uids.Uid="/WindowSill.AppLauncher/SettingsView/NewGroup"
                Click="NewGroupButton_Click"
                Icon="Add" />
        </CommandBar>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="16"
            Visibility="{x:Bind IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
            <Image
                x:Name="EmptyStateImage"
                Width="128"
                Height="128" />
            <TextBlock
                MaxWidth="500"
                HorizontalAlignment="Center"
                api:Uids.Uid="/WindowSill.AppLauncher/SettingsView/EmptyIntro"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Style="{StaticResource CaptionTextBlockStyle}"
                TextAlignment="Center" />
        </StackPanel>

        <ListView
            Grid.Row="1"
            AllowDrop="True"
            CanDragItems="True"
            CanReorderItems="True"
            ItemsSource="{x:Bind AppGroups}"
            SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="0,2,0,0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="core:AppGroup">
                    <Border
                        Height="48"
                        VerticalAlignment="Top"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        PointerEntered="Border_PointerEntered"
                        PointerExited="Border_PointerExited"
                        PointerPressed="Border_PointerPressed">
                        <Grid HorizontalAlignment="Stretch" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol"
                                FontSize="20"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="&#x283F;" />

                            <Image
                                Grid.Column="1"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Source="{x:Bind GroupIcon.Result, Mode=OneWay}" />

                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{x:Bind GroupName, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis" />

                            <StackPanel
                                Grid.Column="3"
                                Margin="0,0,8,0"
                                Padding="4"
                                Orientation="Horizontal"
                                Spacing="4">
                                <Button
                                    Width="24"
                                    Height="24"
                                    Padding="0"
                                    api:Uids.Uid="/WindowSill.AppLauncher/SettingsView/Edit"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="EditGroupButton_Click">
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SegoeFluentIcons}"
                                        FontSize="12"
                                        Glyph="&#xE70F;" />
                                </Button>
                                <Button
                                    Width="24"
                                    Height="24"
                                    Padding="0"
                                    api:Uids.Uid="/WindowSill.AppLauncher/SettingsView/Delete"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="DeleteGroupButton_Click">
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SegoeFluentIcons}"
                                        FontSize="12"
                                        Glyph="&#xE74D;" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
