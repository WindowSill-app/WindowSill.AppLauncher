<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WindowSill.AppLauncher.Settings.EditGroupContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:api="using:WindowSill.API"
    xmlns:appinfo="using:WindowSill.AppLauncher.Core.AppInfo"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WindowSill.AppLauncher.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    Width="480"
    Height="360"
    mc:Ignorable="d">

    <Grid ColumnSpacing="8" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="64"
            Height="64"
            Padding="0">
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/ChangeIcon" Click="ChangeGroupIconMenuFlyoutItem_Click" />
                    <MenuFlyoutItem api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/Reset" Click="ResetGroupIconMenuFlyoutItem_Click" />
                </MenuFlyout>
            </Button.Flyout>
            <Image
                Width="48"
                Height="48"
                Source="{x:Bind ViewModel.GroupIcon.Result, Mode=OneWay}" />
        </Button>
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Center"
            api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/GroupName"
            Text="{x:Bind ViewModel.GroupName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <controls:WrapPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <Button Background="Transparent" BorderBrush="Transparent">
                <Button.Flyout>
                    <Flyout x:Name="AddAppFlyout" />
                </Button.Flyout>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SegoeFluentIcons}"
                        Glyph="&#xE710;" />
                    <TextBlock VerticalAlignment="Center" api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/AppApps" />
                </StackPanel>
            </Button>
            <Button
                Background="Transparent"
                BorderBrush="Transparent"
                Click="AddFilesButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SegoeFluentIcons}"
                        Glyph="&#xE8A5;" />
                    <TextBlock VerticalAlignment="Center" api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/AppFiles" />
                </StackPanel>
            </Button>
            <Button
                Background="Transparent"
                BorderBrush="Transparent"
                Click="AddFoldersButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SegoeFluentIcons}"
                        Glyph="&#xE838;" />
                    <TextBlock VerticalAlignment="Center" api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/AppFolders" />
                </StackPanel>
            </Button>
        </controls:WrapPanel>

        <ListView
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            AllowDrop="True"
            CanDragItems="True"
            CanReorderItems="True"
            ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="0,2,0,0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="appinfo:AppInfo">
                    <Border
                        Height="48"
                        VerticalAlignment="Top"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        PointerEntered="Border_PointerEntered"
                        PointerExited="Border_PointerExited"
                        PointerPressed="Border_PointerPressed">
                        <Grid HorizontalAlignment="Stretch" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol"
                                FontSize="20"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="&#x283F;" />

                            <Image
                                Grid.Column="1"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Source="{x:Bind AppIcon.Result, Mode=OneWay}" />

                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{x:Bind DisplayName, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis" />

                            <StackPanel
                                Grid.Column="3"
                                Margin="0,0,8,0"
                                Padding="4"
                                Orientation="Horizontal"
                                Spacing="4">
                                <Button
                                    Width="24"
                                    Height="24"
                                    Padding="0"
                                    api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/Edit"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    DataContextChanged="EditAppInfoButton_DataContextChanged">
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SegoeFluentIcons}"
                                        FontSize="12"
                                        Glyph="&#xE70F;" />
                                </Button>
                                <Button
                                    Width="24"
                                    Height="24"
                                    Padding="0"
                                    api:Uids.Uid="/WindowSill.AppLauncher/EditGroupContentDialog/Delete"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="DeleteAppInfoButton_Click">
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SegoeFluentIcons}"
                                        FontSize="12"
                                        Glyph="&#xE74D;" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
