<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WindowSill.AppLauncher.Settings.EditAppInfoFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:api="using:WindowSill.API"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WindowSill.AppLauncher.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Width="350" ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Stretch" Spacing="8">
            <Button
                Grid.Column="0"
                Width="64"
                Height="64"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="IconButton_Click">
                <Image
                    Width="48"
                    Height="48"
                    Source="{x:Bind ViewModel.AppInfo.AppIcon.Result, Mode=OneWay}" />
            </Button>
            <Button
                Padding="0"
                HorizontalAlignment="Stretch"
                api:Uids.Uid="/WindowSill.AppLauncher/EditAppInfoFlyout/Reset"
                Command="{x:Bind ViewModel.ResetCommand}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>
        <StackPanel Grid.Column="1" Spacing="8">
            <TextBox api:Uids.Uid="/WindowSill.AppLauncher/EditAppInfoFlyout/Name" Text="{x:Bind ViewModel.AppInfo.DisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                api:Uids.Uid="/WindowSill.AppLauncher/EditAppInfoFlyout/Arguments"
                Text="{x:Bind ViewModel.Arguments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{x:Bind ViewModel.IsExeApp, Converter={StaticResource BoolToVisibilityConverter}}" />
            <CheckBox
                api:Uids.Uid="/WindowSill.AppLauncher/EditAppInfoFlyout/AlwaysRunAsAdmin"
                IsChecked="{x:Bind ViewModel.RunAsAdmin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{x:Bind ViewModel.IsExeOrShortcutApp, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </Grid>
</UserControl>
